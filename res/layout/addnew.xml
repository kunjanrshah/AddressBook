<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical">







<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="First Name" android:width="100px"></TextView><EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="200px" android:id="@+id/txtFirstName"></EditText>
</LinearLayout><LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Last Name" android:width="100px"></TextView><EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="200px" android:id="@+id/txtLastName"></EditText>
</LinearLayout><LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Phone Number" android:width="100px"></TextView><EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="200px" android:id="@+id/txtPhone" android:inputType="number"></EditText>
</LinearLayout><LinearLayout android:id="@+id/LinearLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email ID" android:width="100px"></TextView><EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="200px" android:id="@+id/txtEmail"></EditText>
</LinearLayout><LinearLayout android:id="@+id/LinearLayout03" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address" android:width="100px"></TextView><EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="200px" android:id="@+id/txtAddress"></EditText></LinearLayout>
<Button android:layout_height="wrap_content" android:id="@+id/btnSave" android:text="Save" android:layout_width="100px" android:layout_marginLeft="100px" android:layout_marginTop="20px"></Button>
</LinearLayout>
